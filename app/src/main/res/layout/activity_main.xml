<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <EditText
        android:id="@+id/fullname_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="First Name"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/lastname_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Last Name"
        android:textSize="30sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/birth_date_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lastname_editText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:hint="Birth date"
        android:textSize="30sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/country_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/birth_date_editText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:hint="Country"
        android:textSize="30sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/country_editText"
        app:layout_constraintTop_toBottomOf="@+id/birth_date_editText"
        android:layout_marginTop="16dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>